<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.caurix.distributorauto.AddSDActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Les champs commençant par * sont obligatoires valeurs)"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/mandatory"
                android:text=" Nom du sous-distributeur:" />

            <EditText
                android:id="@+id/etSDName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nom du sous-distributeur"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Numéro du mobile pour les requêtes:" 
                android:drawableLeft="@drawable/mandatory"/>

            <EditText
                android:id="@+id/etSDTrxMobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numéro du mobile pour les requêtes"
                android:inputType="phone" />

           <!--  <TextView
                android:id="@+id/tvLblSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mandatory"
                android:text=" Code de validation des requêtes:" />

            <EditText
                android:id="@+id/etSDSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mandatory"
                android:text=" Solde Actuel:" />

            <EditText
                android:id="@+id/etSDCurrentBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Solde Actuel"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mandatory"
                android:text=" % Commission Cash In:" />

            <EditText
                android:id="@+id/etSDCommissionCOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="% Commission Cash In"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mandatory"
                android:text=" % Commission Cash Out:" />

            <EditText
                android:id="@+id/etSDCommissionCIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="% Commission Cash Out"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse:" />

            <EditText
                android:id="@+id/etSDAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:inputType="text" />

            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 2:" />

            <EditText
                android:id="@+id/etSDAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address 2"
                android:inputType="text" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mandatory"
                android:text=" Telephone:" />

            <EditText
                android:id="@+id/etSDPhone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone" />

            <!--
                  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone 2:" />

            <EditText
                android:id="@+id/etSDPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone 2"
                android:inputType="phone" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:" />

            <EditText
                android:id="@+id/etEMail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <!--
                  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email 2:" />

            <EditText
                android:id="@+id/etEMail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email 2"
                android:inputType="textEmailAddress" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de l’agent:" />

            <EditText
                android:id="@+id/etSDContactPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nom de l’agent"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnSaveSD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sauvegarder" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>